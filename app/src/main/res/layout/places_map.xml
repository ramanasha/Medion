<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">



    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:layout_marginTop="25dp"
        android:id="@+id/places_tablelayout">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:id = "@+id/place_name"
                android:textColor="#292b2d"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:text="Place Name: "
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#1b3966"
                android:layout_marginTop="15dp"
                android:id = "@+id/place_real_name"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"

                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:layout_marginLeft="5dp"
                android:id = "@+id/place_address"
                android:textColor="#292b2d"
                android:text="Place Address: "
                android:layout_below="@+id/Idofevent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_marginRight="20dp"
                android:id = "@+id/place_real_address"
                android:textColor="#1b3966"
                android:layout_below="@+id/eventid"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:id = "@+id/place_phonenumber"
                android:textColor="#292b2d"
                android:layout_marginLeft="5dp"
                android:text="Place PhoneNumber: "
                android:layout_below="@+id/nameofevent"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="18dp"
                android:textColor="#e8493e"
                android:layout_marginRight="20dp"
                android:id = "@+id/eventadmin"
                android:layout_below="@+id/place_real_phonenumber"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id = "@+id/pricelevel"
                android:fontFamily="sans-serif-light"
                android:textColor="#292b2d"
                android:layout_marginLeft="5dp"
                android:text="Place PriceLevel: "
                android:layout_below="@+id/isAdmin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="18dp"
                android:textColor="#1b3966"
                android:layout_marginRight="20dp"
                android:id = "@+id/eventdate"
                android:layout_below="@+id/place_real_pricelevel"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textColor="#292b2d"
                android:id = "@+id/place_latlongs"
                android:layout_marginLeft="5dp"
                android:text="Place Latlongs:"
                android:layout_below="@+id/dateevent"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="18dp"
                android:textColor="#1b3966"
                android:layout_marginRight="20dp"
                android:id = "@+id/eventtime"
                android:layout_below="@+id/place_real_latlongs"
                />

        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textColor="#292b2d"
                android:id = "@+id/ratingis"
                android:layout_marginLeft="5dp"
                android:text="Place Rating: "
                android:layout_below="@+id/timeevent"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="18dp"
                android:textColor="#1b3966"
                android:layout_marginRight="20dp"
                android:id = "@+id/location"
                android:layout_below="@+id/place_real_ratings"
                />
        </TableRow>
    </TableLayout>


    <com.gc.materialdesign.views.ButtonRectangle
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#292b2d"
        android:textColor="#92e8a7"
        android:layout_below="@id/places_tablelayout"
        android:text="Show On Map"
        android:id="@+id/map_places"/>
</RelativeLayout>