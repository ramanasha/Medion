<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit_admin_layout"
    android:background="@drawable/gradient_bg"
    >

    <TextView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:text="Event Details"
        android:id="@+id/details"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:textColor="#1b3966"
        android:textSize="25dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"/>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:layout_marginTop="25dp"
        android:id="@+id/tablelayout">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:id = "@+id/Idofevent"
                android:textColor="#292b2d"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:text="ID: "
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#1b3966"
                android:layout_marginTop="15dp"
                android:id = "@+id/eventid"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="150dp"
                android:layout_alignParentRight="true"
                android:text="id"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:layout_marginLeft="5dp"
                android:id = "@+id/nameofevent"
                android:textColor="#292b2d"
                android:text="Name: "
                android:layout_below="@+id/Idofevent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginRight="20dp"
                android:id = "@+id/eventname"
                android:layout_marginLeft="150dp"
                android:textColor="#1b3966"
                android:layout_below="@+id/eventid"
                android:text="name"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:id = "@+id/isAdmin"
                android:textColor="#292b2d"
                android:layout_marginLeft="5dp"
                android:text="Authority: "
                android:layout_below="@+id/nameofevent"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="18dp"
                android:textColor="#e8493e"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="20dp"
                android:id = "@+id/eventadmin"
                android:layout_below="@+id/eventname"
                android:text="admin?"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id = "@+id/dateevent"
                android:fontFamily="sans-serif-light"
                android:textColor="#292b2d"
                android:layout_marginLeft="5dp"
                android:text="Date: "
                android:layout_below="@+id/isAdmin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="18dp"
                android:textColor="#1b3966"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="20dp"
                android:id = "@+id/eventdate"
                android:layout_below="@+id/eventadmin"
                android:text="date"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textColor="#292b2d"
                android:id = "@+id/timeevent"
                android:layout_marginLeft="5dp"
                android:text="Time: "
                android:layout_below="@+id/dateevent"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="18dp"
                android:textColor="#1b3966"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="20dp"
                android:id = "@+id/eventtime"
                android:layout_below="@+id/eventdate"
                android:text="time"/>

        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textColor="#292b2d"
                android:id = "@+id/locationis"
                android:layout_marginLeft="5dp"
                android:text="Location: "
                android:layout_below="@+id/timeevent"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="18dp"
                android:textColor="#1b3966"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="20dp"
                android:id = "@+id/location"
                android:layout_below="@+id/eventtime"
                android:text="time"/>
        </TableRow>
    </TableLayout>



    <com.gc.materialdesign.views.ButtonRectangle
        android:text="Save"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_viewevent_save"
        android:layout_centerHorizontal="true"
        android:background="#292b2d"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/edit_viewevent_cancelevent"
        android:textColor="#92e8a7"
         />

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentRight="true"
        android:id="@+id/edit_viewevent_cancelevent"
        android:layout_below="@+id/edit_viewevent_addNewMembers"
        android:background="@drawable/cancelevent"
        android:layout_marginRight="25dp"
         />
    <ImageButton
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/finalize"
        android:layout_marginLeft="35dp"
        android:layout_below="@+id/edit_viewevent_addMembers"
        android:id="@+id/edit_viewevent_finalizeevent" />

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/pickplace"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tablelayout"
        android:id="@+id/edit_viewevent_places"
        />

    <ImageButton
        android:layout_marginTop="25dp"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:id="@+id/edit_viewevent_addMembers"
        android:background="@drawable/selectmembers"
        android:layout_below="@+id/tablelayout"
        />
    <ImageButton
        android:layout_marginTop="25dp"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/edit_viewevent_addNewMembers"
        android:background="@drawable/currentmembers"
        android:layout_below="@+id/tablelayout"
        />



</RelativeLayout>